@using ServiceLayer.ViewModels.Client.Farsi
@model List<QuestionsHomeViewModel>
@if(Model.Count != 0)
{ 
<section class="section section-tertiary section-no-border" style="
    margin-top: 0px;">
    <div class="container">
        <div class="row">
            <div class="col">
                    <h4>Frequently Asked Questions</h4>
                <div class="toggle toggle-primary" data-plugin-toggle data-plugin-options="{ 'isAccordion': true }">
                    @foreach (var item in Model)
                    {
                        <section class="toggle">
                            <a class="toggle-title">@item.Qusetion</a>
                            <div class="toggle-content">
                                <p>@item.Answer</p>
                            </div>
                        </section>
                    }
                </div>               
            </div>
        </div>
    </div>
</section>
}