@model ServiceLayer.ViewModels.Admin.ArticleViewModels.CreateArticle
@{
    Layout = "~/areas/administration/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "ایجاد مقاله جدید";
}
<div class="card px-2">
    <div class="modal-header">
        <h4 class="modal-title">@ViewData["Title"]</h4>
    </div>

    <form asp-controller="Articles" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">نام</label>
                    <input type="text" class="form-control" asp-for="Title" id="Title1" onchange="makeSlug('Title1', 'Slug')">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Slug" class="form-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="PublishDate" class="form-label">تاریخ انتشار</label>
                    <input class="form-control persianDateInput" asp-for="PublishDate">
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Picture" class="form-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="CategoryId">گروه مقاله</label>
                    <select class="form-select" asp-for="CategoryId" asp-items='new SelectList(Model.ArticleCategories,"Id","Name")'>
                        <option value="0">گروه مقاله ...</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PictureAlt" class="form-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PictureTitle" class="form-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3 no-margin">
                    <label asp-for="ShortDescription" class="form-label">توضیحات کوتاه</label>
                    <textarea class="form-control autogrow" asp-for="ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3 no-margin">
                    <label asp-for="Description" class="form-label">توضیحات</label>
                    <textarea asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="Keywords" class="form-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keywords">
                    <span asp-validation-for="Keywords" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3 no-margin">
                    <label asp-for="MetaDescription" class="form-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="CanonicalAddress" class="form-label">CanonicalAddress</label>
                    <input type="text" class="form-control" asp-for="CanonicalAddress">
                    <span asp-validation-for="CanonicalAddress" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
    </form>
</div>
        


@section Scripts{
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<script>
    $(function () {
        $('#Description').ckeditor();
    });
</script>
}


