@model ServiceLayer.ViewModels.Admin.ProjectViewModels.EditProjectViewModel

@{
    Layout = "~/areas/administration/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "ویرایش پروژه ";
}
<div class="card">
    <div class="modal-header">
        <h4 class="modal-title">ویرایش پروژه : @Model.Title</h4>
    </div>

    <form asp-action="Edit" asp-controller="Project"
          method="post"
          data-action="Refresh"
          enctype="multipart/form-data">
        <div class="modal-body">
            <input hidden asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Language" class="form-label">انتخاب زبان</label>
                        <select type="text" class="form-select" asp-for="Language">
                            <option value="0">فارسی</option>
                            <option value="1">انگلیسی</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input type="text" class="form-control" id="Name1" asp-for="Title" onchange="makeSlug('Name1', 'Slug')">
                        <span asp-validation-for="Title" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Slug" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Slug">
                        <span asp-validation-for="Slug" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Picture" class="form-label"></label>
                        <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                        <span asp-validation-for="Picture" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <img src="~/ViewPicture/@Model.PictureStr" width="150" height="150" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input class="form-control  persianDateInput" asp-for="StartDate">
                        <span asp-validation-for="StartDate" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PictureAlt" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="PictureAlt">
                        <span asp-validation-for="PictureAlt" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PictureTitle" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="PictureTitle">
                        <span asp-validation-for="PictureTitle" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3 no-margin">
                        <label asp-for="Keywords" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Keywords">
                        <span asp-validation-for="Keywords" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="LinkLocation" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="LinkLocation">
                        <span asp-validation-for="LinkLocation" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3 no-margin">
                        <label asp-for="AddressLocation" class="form-label"></label>
                        <textarea class="form-control autogrow" asp-for="AddressLocation" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="AddressLocation" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Usefularea" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Usefularea">
                        <span asp-validation-for="Usefularea" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="OwnerProject" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="OwnerProject">
                        <span asp-validation-for="OwnerProject" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PresenterProject" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="PresenterProject">
                        <span asp-validation-for="PresenterProject" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="BudgetProject" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="BudgetProject">
                        <span asp-validation-for="BudgetProject" class="error"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TypeStructureProject" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="TypeStructureProject">
                        <span asp-validation-for="TypeStructureProject" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TypeContract" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="TypeContract">
                        <span asp-validation-for="TypeContract" class="error"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NumberUnit" class="form-label"></label>
                        <input type="number" class="form-control" asp-for="NumberUnit">
                        <span asp-validation-for="NumberUnit" class="error"></span>
                    </div>
                </div>
            </div>


        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
    </form>

</div>