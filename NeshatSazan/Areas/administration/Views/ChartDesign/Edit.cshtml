@model ServiceLayer.ViewModels.Admin.ChartViewModels.EditChartDesignViewModel
@{
    Layout = "~/areas/administration/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "ویرایش چارت";
}
<div class="card">
    <div class="modal-header">
        <h4 class="modal-title">@ViewData["Title"] : @Model.Title</h4>
    </div>

<form asp-action="Edit" asp-controller="ChartDesign"
      method="post"
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Language" class="form-label">انمتخاب زبان</label>
                    <select type="text" class="form-select" asp-for="Language">
                        <option value="0">فارسی</option>
                        <option value="1">انگلیسی</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <select type="text" class="form-select" id="Name1" asp-for="Title">
                        <option value="1" > هدایت گر</option>
                        <option value="2" > مدیران ارشد</option>
                        <option value="3" > اعضای هئیت مدیره</option>
                    </select>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="NameFamily" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="NameFamily">
                    <span asp-validation-for="NameFamily" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="SideCompany" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="SideCompany">
                    <span asp-validation-for="SideCompany" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="MetaDescription" class="form-label"></label>
                    <textarea type="text" rows="3" class="form-control" asp-for="MetaDescription"></textarea>
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Picture" class="form-label"></label>
                    <input type="file" class="form-control" asp-for="Picture" accept="Image/*">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PictureAlt" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PictureTitle" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="text-danger"></span>
                </div>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
</div>
