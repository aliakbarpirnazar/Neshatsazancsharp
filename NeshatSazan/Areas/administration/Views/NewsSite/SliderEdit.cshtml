@model ServiceLayer.ViewModels.Admin.SliderNewsSiteViewModels.EditSliderNewsSiteViewModel

@{
    Layout = "~/areas/administration/views/shared/_AdminLayout.cshtml";
    ViewData["Title"] = "ویرایش عکس ";
}

<div class="card">
    <div class="modal-header">
        <h4 class="modal-title">@ViewData["Title"] : @Model.PictureTitle</h4>
    </div>


<form asp-action="SliderEdit" asp-controller="NewsSite"
      method="post"
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <input hidden asp-for="@Model.Id" />
                <input hidden asp-for="@Model.NewsSiteId" />
                <div class="form-group">
                    <label asp-for="Picture" class="control-label"></label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="error"></span>
                </div> 
            </div> 
            <div class="col-md-6">                
                <div class="form-group">
                    <img src="~/ViewPicture/@Model.PictureStr" width="200" height="200"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label"></label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label"></label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>
        </div>


        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
    </form>
</div>