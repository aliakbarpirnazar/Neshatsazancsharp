@model ServiceLayer.ViewModels.Admin.IdentityViewModels.ProfileViewModel

@{
    ViewData["Title"] = "پروفایل کاربر";
    Layout = "~/Areas/administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="pe-3"><h4 class="page-title">@ViewData["title"]</h4></div>
</div>
<hr />


<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">

                    <form asp-action="UpdateAvatarProfile" asp-controller="Dashboard" method="post" data-action="Refresh" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/ViewPicture/@Model.Avatar" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                                <div class="mt-3">
                                    <h4>@Model.DisplayName</h4>
                                    <p class="text-secondary mb-3">@Model.RegisteerTime</p>

                                    <hr class="my-4">
                                    <br />
                                    <div class="mb-4">
                                        <input hidden asp-for="@Model.Id" />
                                        <input type="file" class="form-control" asp-for="@Model.Avatarfile" accept="image/*">
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="تغییر تصویر" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <form asp-action="UpdateProfile" asp-controller="Dashboard" method="post" data-action="Refresh" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">نام کامل</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input hidden asp-for="@Model.Id" />
                                        <input type="text" required class="form-control" asp-for="@Model.DisplayName">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">شماره تماس</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" required asp-for="@Model.PhoneNumber">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-3 text-secondary">
                                        <input type="submit" class="btn btn-primary px-4" value="ذخیره تغییرات">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="card">
                    <form asp-action="UpdatePasswordProfile" asp-controller="Dashboard" method="post" data-action="Refresh" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">رمز عبور جدید</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input hidden asp-for="@Model.Id" />
                                        <input type="password" required class="form-control" asp-for="@Model.Password">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>

                                    <div class="col-sm-4 text-secondary">
                                        <input type="submit" class="btn btn-primary px-4" value="تغییر کلمه عبور">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
