@using ServiceLayer.ViewModels.Client.Farsi
@model List<NewsSiteViewModel>
@if(Model.Count != 0)
{
    <section class="projects">
        <div class="title-text">
            <h3>آخرین‌اخبار</h3>
        </div>
        <div class="container">
            <div class="container-text">
                <div class="swiper mySwiper-news-text">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                        <div class="swiper-slide">
                            <div class="date-link">
                                    <p>@item.StartDay</p>
                                    <p>@item.StartMonth</p>
                            </div>
                            <div class="title-news">
                                <h3>
                                        <a  asp-action="NewsSearch" asp-controller="Home" asp-route-slug="@item.Slug">@item.Title</a>
                                </h3>
                            </div>
                            <div class="des-news">
                                <p>
                                        @item.MetaDescription
                                </p>
                            </div>
                        </div>  
                        }                     
                       
                    </div>
                </div>
                <div class="news-button">
                    <div class="news-links">
                        <a href="/home/news" class="second-button">
                            مشاهده همه خبر ها
                            <img src="~/clienttheme/images/arrow.svg" />
                        </a>
                    </div>
                    <div class="arrow-function">
                        <div class="news-button-next">
                            <img src="~/clienttheme/images/cursor-right-svgrepo-com.svg"/>
                        </div>
                        <div class="news-button-prev">
                            <img src="~/clienttheme/images/cursor-left-svgrepo-com.svg"/>
                        </div>
                    </div>

                </div>
            </div>
            <div class="container-img">
                <div class="swiper-card mySwiper-news-img">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                        <div class="swiper-slide swiper-slide-card">
                                <a asp-action="NewsSearch" asp-controller="Home" asp-route-slug="@item.Slug">

                                <img src="~/ViewPicture/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle" />
                            </a>
                        </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </section>




}