@using ServiceLayer.ViewModels.Client.Farsi
@model List<QuestionsHomeViewModel>
@if(Model.Count != 0)
{

    <section class="question">
        <div class="title-text">
            <h3>سوالات‌‌متداول</h3>
        </div>
        <div class="quest-box">
            <div class="quest-list">
                <ul>
                    @foreach (var item in Model)
                    {
                    <li>
                            <h3>
                                @item.Qusetion 

                            </h3>
                            <p>  @Html.Raw(item.Answer)</p>
                    </li>
                    }
                </ul>
            </div>

        </div>
    </section>



}