@model DataLayer.Models.BlogManagement.Article
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "نمایش مقاله";
	ViewData["metaDescription"] = @Model.MetaDescription;
	ViewData["keywords"] = Model.Keywords;
	
}
<section class="page-header page-header-modern page-header-background page-header-background-sm overlay section overlay-color-primary overlay-show overlay-op-8 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 align-self-center p-static order-2 text-center">
                <h1 class="mb-n2">@ViewData["Title"] : @Model.Title </h1>
            </div>
            <div class="col-md-12 align-self-center order-1">
                <ul class="breadcrumb breadcrumb-light d-block text-center">
                    <li><a href="/Home/Index">خانه</a></li>
                    <li><a href="/Home/CategoryArticle">مقالات</a></li>
                    <li><a asp-action="ArticleCategory" asp-route-slug="@Model.Category.Slug" asp-controller="Home">@Model.Category.Name</a></li>
                    <li class="active">@Model.Title</li>
                </ul>
            </div>
        </div>
    </div>
</section>


<article class="post post-large blog-single-post">

	<div class="post-date mt-3">
		<span class="day">@ViewBag.Day</span>
		<span class="month">@ViewBag.Month</span>
	</div>

	<div class="post-content">

		<h1 class="mb-3 mt-n3 text-7 text-sm-8 text-md-9 line-height-8">@Model.Title</h1>

		<div class="post-meta">
			<span><i class="far fa-user"></i> دسته بندی  <a asp-action="ArticleCategory" asp-route-slug="@Model.Category.Slug" asp-controller="Home">@Model.Category.Name</a> </span>
			<span><i class="far fa-folder"></i> <a href="#">@Model.Keywords</a></span>
			@*<span><i class="far fa-comments"></i> <a href="#">12 دیدگاه</a></span>*@
		</div>

		<img src="~/ViewPicture/@Model.Picture" class="img-fluid float-right mb-3 mb-1 ml-sm-4 ml-lg-5" alt="@Model.PictureAlt" title="@Model.PictureTitle" style="width: 360px;">

		<p class="lead">@Model.ShortDescription</p>

		<p>@Model.Description</p>
		
