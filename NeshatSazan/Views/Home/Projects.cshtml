@model List<DataLayer.Models.ProjectManagement.Project>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "نمایش پروژه ها";
}
<section class="page-header page-header-modern page-header-background page-header-background-sm overlay section overlay-color-primary overlay-show overlay-op-8 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 align-self-center p-static order-2 text-center">
                <h1 class="mb-n2">@ViewData["Title"]  </h1>
            </div>
            <div class="col-md-12 align-self-center order-1">
                <ul class="breadcrumb breadcrumb-light d-block text-center">
                    <li><a href="/Home/Index">خانه</a></li>
                    <li class="active">@ViewData["Title"] </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="container">
    @if (Model.Count != 0)
    {
        <div class="container">
            <div class="row pb-4 pb-lg-0">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4">
                        <div class="recent-posts mt-4">
                            <a asp-action="Project" asp-controller="Home" asp-route-slug="@item.Slug">
                                <img class="img-fluid pb-3" src="~/ViewPicture/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle" width="250" height="250">
                            </a>
                            <article class="post">
                               
                                <h4 class="mb-1"><a class="text-color-dark" asp-action="Project" asp-controller="Home" asp-route-slug="@item.Slug">@item.Title</a></h4>
                                <a asp-action="Project" asp-controller="Home" asp-route-slug="@item.Slug"> نمایش کامل <i class="fas fa-long-arrow-alt-left align-middle"></i></a>
                            </article>
                        </div>
                    </div>
                }

            </div>
        </div>
               
    }

</div>